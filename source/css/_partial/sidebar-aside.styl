#sidebar
  @media mq-normal
    column(sidebar-column)

.widget-wrap
  margin: block-margin 0

.widget-title
  // @extend $block-caption
  color: color-N90
  font-size: 20px
  font-weight: bold
  margin-bottom: 8px 

.widget
  @extend $card
  color: color-sidebar-text
  padding: 20px
  a
    color: color-L75
    text-decoration: none
    &:hover
      text-decoration: underline
  ul, ol, dl
    ul, ol, dl
      margin-left: 15px
      list-style: disc