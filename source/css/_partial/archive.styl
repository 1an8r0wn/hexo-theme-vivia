.archives-wrap
  margin: block-margin 0

.archives
  clearfix()

.archive-year-wrap
  margin-bottom: 1em

.archive-year
  @extend $block-caption

.archives
  column-gap: 10px
  @media mq-tablet
    column-count: 2
  @media mq-normal
    column-count: 3

.archive-article
  avoid-column-break()

.archive-article-inner
  @extend $block
  padding: 10px
  margin-bottom: 15px

.archive-article-title
  text-decoration: none
  font-weight: bold
  color: color-default
  transition: color 0.2s
  &:hover
    color: color-link

.archive-article-footer
  margin-top: 1em

.archive-article-date
  color: color-grey
  text-decoration: none
  font-size: 0.85em
  line-height: 1em
  margin-bottom: 0.5em
  display: block

#page-nav
  clearfix()
  margin: block-margin auto
  text-align: center
  color: color-grey
  overflow: hidden
  display: flex
  justify-content: center
  gap: 12px
  #num-bar
    border-radius: inner-radius
    background: var(--color-L25)
    display: flex
    .current
      background: var(--color-L75)
      color: var(--color-L25)
  .page-nav-btn
    width: 40px
    height: 40px
    background: var(--color-L25)
    border-radius: inner-radius
    font-family: font-icon
    font-weight: 900
    font-size: 24px
    display: flex
    justify-content: center
    align-items: center
    color: var(--color-L75)
    &.disabled
      color: color-N10
      pointer-events: none
  a
    color: color-N75
    text-decoration: none
    transition: background trans-style
    &:hover
      &:not(.disabled)
        background: var(--color-L40)
  .page-number
    width: 40px
    height: 40px
    display: flex
    align-items: center
    justify-content: center
    border-radius: inner-radius
    font-weight: medium
    padding: 0
    @media mq-mobile
      display: none
  .space
    color: color-border   // TODO to be tested

width-date = 10%
width-line = 10%
width-tags = 15%
width-title = 100 - width-date - width-line - width-tags

.archive-main-card
  @extend $card
  padding-top: 32px
  padding-bottom: 32px
  
  .archive-title
    @extend $main-title
    margin-left: 40px
    margin-bottom: 16px
  
  .year-line
    font-size: 24px
    color: color-N75
    font-weight: bold
    display: flex
    margin: 0 44px
    height: 60px
    align-items: center
    margin-top: 8px
    .year-num
      width: width-date
      text-align: right
    .dot-wrapper
      width: width-line
      display: flex
      align-items: center
      justify-content: center
      .dot
        width: 12px
        height: 12px
        background: var(--color-L25)
        border-radius: 50%
        outline: 3px solid var(--color-L75)
        outline-offset: -2px
        z-index: 1
      

  .archive-article-link
    display: flex
    justify-content: flex-start
    align-items: center
    height: 40px
    transition: background trans-style
    margin: 0 24px
    padding: 0 20px
    border-radius: inner-radius
    &:hover
      background: var(--color-L20)
      .title-inner
        color: var(--color-L75)
        padding-left: 4px
      .dot
        height: 20px
        background: var(--color-L75)
        outline-color: var(--color-L20)
    .date
      font-size: 14px
      color: color-N50
      width: width-date
      text-align: right
    .line
      width: 10%
      height: 100%
      position: relative
      display: flex
      justify-content: center
      align-items: center
      &:before
        content: ''
        width: width-line
        height: 100%
        border-left: 2px dashed color-N10
        position: absolute
        left: calc(50% - 1px)
        top: -50%
        pointer-events: none
    .dot
      width: 4px
      height: 4px
      border-radius: 2px
      background: var(--color-L50)
      outline: 8px solid var(--color-L25)
      transition: background trans-style, height trans-style, outline-color trans-style
      z-index: 10
    .title
      width: width-title
    .title-inner
      font-size: 16px
      font-weight: medium
      color: color-N75
      white-space: nowrap
      text-overflow: ellipsis
      overflow: hidden
      transition: padding-left trans-style, color trans-style
    .tags
      color: color-N30
      font-size: 14px
      width: width-tags
      text-align: right
      white-space: nowrap
      text-overflow: ellipsis
      overflow: hidden
